        </tr>
      </tbody>
    </table>

    <!-- Lyrics detail Modal -->
    <div class="modal fade" id="lyricsDetailModal" tabindex="-1" role="dialog" data-backdrop="false">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <div class="modal-title">
              <h5 id="songName"></h5>
              <small id="artist"></small>
            </div>
            <button type="button" class="close" data-dismiss="modal">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p id="songLyrics"></p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    <!-- lyrics modal end -->
  </div>
  <div id="profileBody">
    <h1 class="display-4">User Information</h1>
    <table class="table table-dark" id="profileTable">
      <thead>
      </thead>
      <tbody>
        <tr>
          <th scope="row">User Name</th>
          <td>@Session["UserName"].ToString()</td>
        </tr>
        <tr>
          <th scope="row">Email</th>
          <td>@Session["Email"].ToString()</td>
        </tr>
        <tr>
          <th scope="row">Songs Added</th>
          <td>13</td>
        </tr>
    </table>
  </div>
  <div id="myLyricsBody">
