    <!-- lyrics modal end -->
    <!-- edit lyrics Modal -->
    <div class="modal fade" id="lyricsEditModal" tabindex="-1" role="dialog">
      <div class="modal-dialog  modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Edit the Lyrics</h5>
            <button type="button" class="close" data-dismiss="modal">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="form-group row">
              <label for="staticAddedBy" class="col-sm-2 col-form-label">Added By:</label>
              <div class="col-sm-10">
                <input type="text" readonly="" class="form-control-plaintext" id="staticAddedBy" value="arbin">
              </div>
            </div>
            <div class="form-group">
              <label for="songName">Song Name</label>
              <input type="text" class="form-control" id="songName" placeholder="Enter the name of the song">
              <small class="form-text text-muted">Please donot repost songs.</small>
            </div>
            <div class="form-group">
              <label for="songArtist">Artist</label>
              <input type="text" class="form-control" id="songArtist" placeholder="Enter the name of the artist">
            </div>
            <div class="form-group">
              <label for="lyrics">Lyrics</label>
              <textarea class="form-control" id="lyrics" rows="8"></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
    <!-- edit lyrics modal end -->
    <!-- delete lyrics Modal -->
    <div class="modal fade" id="lyricsDeleteModal" tabindex="-1" role="dialog">
      <div class="modal-dialog  modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title"></h5>
            <button type="button" class="close" data-dismiss="modal">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary">Delete</button>
          </div>
        </div>
      </div>
    </div>
    <!-- delete lyrics modal end -->
  </div>
</div>
