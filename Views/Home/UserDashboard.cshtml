@{
  ViewBag.Title = "User";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
  <div id="userHomeBody">
    <div class="header-part">
      <!-- header -->
      <h1>search the song</h1>
      <!-- Search Box -->
      <div class="box">
        <div class="container-1">
